{
  "name": "ndutax-mongodb-express-react-nodejs-typescript",
  "version": "1.0.0",
  "description": "N.D.U.T.A.X - Neural Decision Unit for Trading Analytics & Execution",
  "author": "Douglas Maposa",
  "repository": "the-code-writer/ndutax",
  "license": "MIT",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "nodev": "nvm use 23.8.0",
    "dev-usr": "tsx watch --clear-screen=false src/classes/user/example.ts | pino-pretty",
    "dev-tg": "tsx watch --clear-screen=false src/classes/telegram/example.ts | pino-pretty",
    "dev-db": "tsx watch --clear-screen=false src/classes/databases/mongodb/example.ts | pino-pretty",
    "dev-crypt": "tsx watch --clear-screen=false src/classes/cryptography/example.ts | pino-pretty",
    "dev-connect": "tsx watch --clear-screen=false src/classes/deriv/example.ts | pino-pretty",
    "dev-trade": "tsx watch --clear-screen=false src/classes/trader/example.ts | pino-pretty",
    "dev": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "build": "tsup",
    "start": "node --no-deprecation dist/index.cjs",
    "clean": "rimraf dist coverage",
    "lint": "biome check src/",
    "lint:fix": "biome check src/ --fix",
    "format": "biome format src/",
    "test": "vitest run",
    "test-jest": "npx jest",
    "test-jest-install": "npm install --save-dev jest @types/jest ts-jest",
    "prepare": "husky"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.0",
    "@deriv/deriv-api": "^1.0.15",
    "@types/nedb": "^1.8.16",
    "axios": "^1.8.4",
    "chai": "^5.2.0",
    "connect-mongo": "^5.1.0",
    "connect-mongodb-session": "^5.0.0",
    "cookie": "^1.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "envalid": "^8.0.0",
    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "express-list-endpoints": "^7.1.1",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "helmet": "^8.1.0",
    "html-pdf": "^3.0.1",
    "http-status-codes": "^2.3.0",
    "jsan": "^3.1.14",
    "mocha": "^11.1.0",
    "mongodb": "^6.15.0",
    "nedb": "^1.8.0",
    "node-rsa": "^1.1.1",
    "node-telegram-bot-api": "^0.66.0",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pusher": "^5.2.0",
    "pusher-js": "^8.4.0",
    "redis": "^4.7.0",
    "rxjs": "^7.8.2",
    "sanitize-html": "^2.16.0",
    "sinon": "^20.0.0",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "ua-parser-js": "^2.0.3",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "ws": "^8.18.1",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^5.0.1",
    "@types/express-session": "^1.18.1",
    "@types/jest": "^29.5.14",
    "@types/node-telegram-bot-api": "^0.64.8",
    "@types/sanitize-html": "^2.15.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.1",
    "nosql-json-database": "^1.0.0",
    "pino-pretty": "^13.0.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vite-plugin-ejs": "^1.7.0",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-raw": "^1.0.3",
    "vite-plugin-static": "^0.0.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  },
  "lint-stagedx": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,json,jsonc}": [
      "biome check --apply --no-errors-on-unmatched"
    ]
  },
  "lint-staged": {
    "*.txt": [
      "ls -l"
    ]
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/__tests__/**",
      "!src/**/*.test.*"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
